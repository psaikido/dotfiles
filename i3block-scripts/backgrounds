#! /bin/bash

posX=$(($BLOCK_X - $WIDTH / 2 + 40))
posY=$(($BLOCK_Y - $HEIGHT + 100))

action=$(yad --title "wallpapers" \
    --form \
    --width=$WIDTH --height=$HEIGHT \
    --undecorated --fixed \
    --close-on-unfocus --no-buttons \
    --posx=$posX --posy=$posY \
    --field="change wallpaper":BTN "bash -c $SCRIPT_DIR/bkg.sh; kill yad" \
    --field="add2faves":BTN "bash -c $SCRIPT_DIR/bkg-faves.sh kill yad" \
)

