#!/usr/bin/env bash
#
url="https://www.moongiant.com/phase/today"
pattern="Phase:"
phase=$(curl -s "$url" | grep "$pattern" | awk -F ">" '{print $3}' | sed 's/<\/span//g')


case "$phase" in
	"New Moon")
		img="ğŸŒš"
	;;

	"Waxing Crescent")
		img="ğŸŒ’"
	;;

	"First Quarter")
		img="ğŸŒ“"
	;;

	"Waxing Gibbous")
		img="ğŸŒ”"
	;;

	"Full Moon")
		img="ğŸŒ•"
	;;

	"Waning Gibbous")
		img="ğŸŒ–"
	;;

	"Last Quarter")
		img="ğŸŒ—"
	;;

	"Waning Crescent")
		img="ğŸŒ˜"
	;;
esac

echo "$img"
